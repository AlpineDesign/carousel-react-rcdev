{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "lib": ["DOM", "ES2015", "ES2016"],
    "declaration": true,
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",

    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "exclude": ["./node_modules"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
